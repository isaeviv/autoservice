.nested-fields.alert.alert-success
  .mb-3
    = f.label :name, class: "form-label"
    = f.text_field :name, class: "form-control"
    
    = f.label :price, class: "form-label"
    = f.text_field :price, class: "form-control"
    
    = f.label :category, class: "form-label"
    = f.collection_select :category_id, Category.order(:name), :id, :name, {}, { class: "form-select" }
    
    = f.label :specialist, class: "form-label"
    = f.collection_select :specialist_id, Specialist.order(:name), :id, :name, {}, { class: "form-select" }
  
  .mb-3
    = link_to_remove_association "Удалить услугу", f, class: "btn btn-danger"