= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message
  .row.mb-3
    .col-sm-6
      = f.label      :client_name, class: "form-label"
      = f.text_field :client_name, class: "form-control"
    .col-sm-6
      = f.label :client_phone_number, class: "form-label"
      = f.text_field :client_phone_number, class: "form-control"
  .mb-3
    = f.label      :description, class: "form-label"
    = f.text_area :description, class: "form-control"
  %h3 Services
  #services.mb-3
    = f.fields_for :services do |service|
      = render "service_fileds", f: service
    .links
      = link_to_add_association "Добавить услугу", f, :services, class: 'btn btn-success', partial: "service_fileds"
  .actions
    = f.submit 'Save', class: "btn btn-primary"
