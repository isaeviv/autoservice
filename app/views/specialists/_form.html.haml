= form_for @specialist do |f|
  - if @specialist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specialist.errors.count, "error")} prohibited this specialist from being saved:"
      %ul
        - @specialist.errors.full_messages.each do |message|
          %li= message
  .row.mb-3
    .col-sm-6
      = f.label      :name, class: "form-label"
      = f.text_field :name, class: "form-control"
    .col-sm-6
      = f.label      :profession, class: "form-label"
      = f.text_field :profession, class: "form-control"
  .actions
    = f.submit 'Сохранить', class: "btn btn-primary"
