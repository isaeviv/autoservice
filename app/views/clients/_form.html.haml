= form_for @client do |f|
  - if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @client.errors.full_messages.each do |message|
          %li= message
  .row.mb-3
    .col-sm-6
      .row
        .col
          = f.label      :second_name, class: "form-label"
          = f.text_field :second_name, class: "form-control"
        .col
          = f.label      :first_name, class: "form-label"
          = f.text_field :first_name, class: "form-control"
      
      = f.label      :patronymic, class: "form-label"
      = f.text_field :patronymic, class: "form-control"
      
      = f.label      :email, class: "form-label"
      = f.text_field :email, class: "form-control"
    .col-sm-6
      .row
        .col
          = f.label :phone_number, class: "form-label"
          = f.telephone_field :phone_number, class: "form-control"
        .col
          = f.label :additional_phone_number, class: "form-label"
          = f.telephone_field :additional_phone_number, class: "form-control"
      
      = f.fields :adress, model: OpenStruct.new(@client.adress) do |fa|
        .row
          .col
            = fa.label :city, class: "form-label"
            = fa.text_field :city, class: "form-control"
          .col
            = fa.label :street, class: "form-label"
            = fa.text_field :street, class: "form-control"
        .row
          .col
            = fa.label :building, class: "form-label"
            = fa.text_field :building, class: "form-control"
          .col
            = fa.label :room, class: "form-label"
            = fa.text_field :room, class: "form-control"
        
  .mb-3
    = f.label      :description, class: "form-label"
    = f.text_area :description, class: "form-control"
  .actions
    = f.submit 'Сохранить', class: "btn btn-primary"
    = link_to "Назад", clients_path, class: "btn btn-secondary"